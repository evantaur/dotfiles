#!/bin/bash
source $HOME/.config/bash/colors
source $_B_CONF/scripts/git-prompt.sh

___SUDO_ACTIVE() {
  sudo -n true 2>/dev/null && echo -ne "$BRIGHT_RED🍄"
}
export PS1="${BLUE}[\$(___SUDO_ACTIVE)${YELLOW}\u${BLUE}][${YELLOW}\h${BLUE}]${RESET}${YELLOW}[${BLUE}\w${YELLOW}]${RESET}\$(__git_ps1)\\n└─▪ "





