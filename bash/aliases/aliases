alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ls='lsd'
alias nala='forcesudo /usr/bin/nala'
alias anal=nala
alias nano="hx||helix||nano"
alias nf="$_B_CONF/scripts/nf"
alias activate='source bin/activate &> /dev/null || source ../bin/activate &> /dev/null || echo "not in venv"'
alias calc="numbat -e"
alias ytdl="yt-dlp -f mp4"
alias cyber="ssh -t 10.255.255.5 \"~/start.sh\""
alias forcesudo='[ "$(whoami)" = "root" ] && "$@" || sudo'

function fuck () {
    TF_PYTHONIOENCODING=$PYTHONIOENCODING;
    export TF_SHELL=bash;
    export TF_ALIAS=fuck;
    export TF_SHELL_ALIASES=$(alias);
    export TF_HISTORY=$(fc -ln -10);
    export PYTHONIOENCODING=utf-8;
    TF_CMD=$(
        thefuck THEFUCK_ARGUMENT_PLACEHOLDER "$@"
    ) && eval "$TF_CMD";
    unset TF_HISTORY;
    export PYTHONIOENCODING=$TF_PYTHONIOENCODING;
    history -s $TF_CMD;
}

if [ -d "/opt/rocm" ]; then
  export ROCM_PATH=/opt/rocm
  export HSA_OVERRIDE_GFX_VERSION=10.3.0
fi
