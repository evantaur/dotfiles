#Attempt to find helix
if [[ `whereis helix 2> /dev/null` ]]; then
    alias nano="helix"
    alias hx="$_B_CONF/scripts/hxedit hx"
elif [[ `whereis hx 2> /dev/null` ]]; then
    alias nano="hx"
    alias hx="$_B_CONF/scripts/hxedit hx"
else
    alias nano="$_B_CONF/scripts/hxedit nano"
    alias hx="nano"
fi
