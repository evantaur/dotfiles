#!/bin/bash
# Script that opens video links in mpv instead of browser
# 
 
# Configs
BROWSER="floorp"

trash_sites=(
    "facebook.com"
    "instagram.com"
    "tiktok.com"
    "youtube.com"
    )

# Script
url="$1"

[[ -z $url ]] && exit 0
for site in "${trash_sites[@]}"; do
    if [[ "$url" == *"$site"* ]]; then
        filth=1
        mpv "$url" &> /dev/null & disown
        exit 0
    fi
done
exec "$BROWSER" "$url"

